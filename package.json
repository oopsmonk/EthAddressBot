{
  "name": "ethaddressbot",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "test": "bun test --watch",
    "release-x64": "bun build --compile --target=bun-linux-x64 --minify --sourcemap index.ts --outfile ./bin/EthAddrLogger-x64",
    "release-arm64": "bun build --compile --target=bun-linux-arm64 --minify --sourcemap index.ts --outfile ./bin/EthAddrLogger-arm64"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/figlet": "^1.5.8"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "figlet": "^1.7.0",
    "web3": "^4.8.0"
  }
}
